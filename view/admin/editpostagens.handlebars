{{#each erros}}
<div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}
<div class="card">
    <div class="card-body">
        <form action="/admin/postagem/edit" method="post">
        <input type="hidden" value="{{postagens._id}}" name="id">
            <h4>Editar Postagem</h4>
            <label for="titulo" class="form-label">Titulo:</label>
            <input type="text" name="titulo" class="form-control" value="{{postagens.titulo}}">
            <label for="slug" class="form-label">Slug:</label>
            <input type="text" name="slug" class="form-control" value="{{postagens.slug}}">
            <label for="descricao" class="form-label">Descrição:</label>
            <input type="text" name="descricao" class="form-control" value="{{postagens.descricao}}">
            <label for="conteudo" class="form-label">Conteudo:</label>
            <textarea name="conteudo" class="form-control">{{postagens.conteudo}}</textarea>
            <label for="categoria" class="form-label">categoria:</label>
            <select name="categoria" class="form-select">
                {{#each categorias}}
                <option value="{{_id}}">{{nome}}</option>
                {{else}}
                <option value="0">Nenhuma Categoria registrada</option>
                {{/each}}
            </select>
            <button class="btn btn-success mt-4" type="submit">Editar Postagem</button>
        </form>
    </div>
</div>